<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>B A C | Dashboard</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        @media only screen and (max-width: 527px) {
            section {
                margin: 0 50px;
                font-size: 1rem;
            }

            .parent>div>span {
                width: 80vw;
            }
        }
    </style>
</head>

<body style="background-image: url(/dist/img/mainbg.svg); background-repeat: no-repeat; background-size: cover; width: 100vw; height: 100vh;      background-position: center; color: white; font-family:
    Poppins, sans-serif; 
    font-weight: 500; overflow: hidden;">
    <!-- <header class="logo" style="display: flex; align-items: center; justify-content: space-between; width: 100%; padding: 0 20px;
    background: rgba(255, 255, 255, 0.16);
    /* border-radius: 16px; */
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(9.4px);
    -webkit-backdrop-filter: blur(9.4px);
    border: 1px solid rgba(255, 255, 255, 0.33);">
        <span>B A C</span>
        <span><img src=""></span>
    </header> -->
    <%- include('includes/sheader') %>
        <section
            style="width: 500px; height: 80vh; padding: 0 20px; display: flex; align-items: center; justify-content: center; flex-direction: column; align-items: center; justify-content: center;
        background: rgba(255, 255, 255, 0);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 1);
    backdrop-filter: blur(100px);
    -webkit-backdrop-filter: blur(100px);
    margin: auto; padding: 10px 0; position: relative; top: 10%; @media only screen and (max-width: 567px) {width: 500px; } overflow: hidden;">
            <% if(user.displayedGuilds){ user.displayedGuilds.forEach(function(guild) { %>
                <div class="parent"
                    style="width: 500px; height: 80%; display: flex; align-items: center; justify-content: space-between; padding: 0 10px;  ">
                    <div style="display: flex; align-items: center; gap: 20px;">
                        <img src="<%= guild.iconURL %>" style="border-radius: 100%" width="40" height="40"
                            class="img-fluid" />
                        <span style="font-size: 1.2rem; @media only screen and (max-width: 527px) {font-size:1rem;}">
                            <%= guild.name %>
                        </span>
                    </div>
                    <div>
                        <% if(guild.settingsUrl.includes('discordapp.com')) { %>
                            <a href="<%= guild.settingsUrl %>"
                                style="text-decoration: none; color: white; font-size: 1.5rem;">+</a>
                            <% } else { %>
                                <a href="<%= guild.settingsUrl %>"
                                    style="text-decoration: none; color: white; font-size: 1.5rem;">></a>
                                <% } %>
                    </div>
                </div>

                <% }); } else { %>

                    <% } %>
        </section>
</body>

</html>