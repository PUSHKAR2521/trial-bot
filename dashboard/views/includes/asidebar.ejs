        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/dist/css/asidebar.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
</head>

<body>
    <aside id="sideBar" class="mr-2">
        <div class="head h-[50px] mb-5 border-b-2 border-white">
            <div class="logo">B A C</div>
            <div class="toggleBtn">
                <button id="toggleBtn">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px"
                        fill="#e8eaed">
                        <path
                            d="M120-240v-80h520v80H120Zm664-40L584-480l200-200 56 56-144 144 144 144-56 56ZM120-440v-80h400v80H120Zm0-200v-80h520v80H120Z" />
                    </svg>
                </button>
            </div>
        </div>

        <div class="navLinks w-[100%] flex gap-2 justify-center items-center">
            <div class="icons flex flex-col gap-5">
                <div class="userIcon flex flex-col gap-2">
                    <a class="flex flex-col gap-2">
                        <img id="userPic" src="<%= user.displayAvatar %>" alt="User Profile Pic"></img>
                    <div class="userLabel labelLink">
                        <span><%= user.global_name %></span>
                    </div>
                    </a>
                </div>
                <div class="basicIcon flex gap-2">
                    <a href="/manage/<%= guild.id %>/basic" class="flex gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px"
                        fill="#e8eaed">
                        <path
                            d="M480-80q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Zm-40-82v-78q-33 0-56.5-23.5T360-320v-40L168-552q-3 18-5.5 36t-2.5 36q0 121 79.5 212T440-162Zm276-102q20-22 36-47.5t26.5-53q10.5-27.5 16-56.5t5.5-59q0-98-54.5-179T600-776v16q0 33-23.5 56.5T520-680h-80v80q0 17-11.5 28.5T400-560h-80v80h240q17 0 28.5 11.5T600-440v120h40q26 0 47 15.5t29 40.5Z" />
                    </svg>
                    <div class="basicLabel labelLink0">
                        <span>Basic</span>
                    </div>
                    </a>
                </div>
                <div class="greetingIcon flex gap-2">
                    <a href="/manage/<%= guild.id %>/greeting" class="flex gap-2"><svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960"
                            width="24px" fill="#e8eaed">
                            <path
                                d="M360-80v-529q-91-24-145.5-100.5T160-880h80q0 83 53.5 141.5T430-680h100q30 0 56 11t47 32l181 181-56 56-158-158v478h-80v-240h-80v240h-80Zm120-640q-33 0-56.5-23.5T400-800q0-33 23.5-56.5T480-880q33 0 56.5 23.5T560-800q0 33-23.5 56.5T480-720Z" />
                        </svg>
                        <div class="greetingLabel labelLink2">
                            <span>Greeting</span>
                        </div>
                    </a>
                </div>
                <div class="basicIcon flex gap-2">
                    <a href="/music?guildId=<%= guild.id %>" class="flex gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px"
                        fill="#e8eaed">
                        <path
                            d="M480-80q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Zm-40-82v-78q-33 0-56.5-23.5T360-320v-40L168-552q-3 18-5.5 36t-2.5 36q0 121 79.5 212T440-162Zm276-102q20-22 36-47.5t26.5-53q10.5-27.5 16-56.5t5.5-59q0-98-54.5-179T600-776v16q0 33-23.5 56.5T520-680h-80v80q0 17-11.5 28.5T400-560h-80v80h240q17 0 28.5 11.5T600-440v120h40q26 0 47 15.5t29 40.5Z" />
                    </svg>
                    <div class="basicLabel labelLink0">
                        <span>Music</span>
                    </div>
                    </a>
                </div>
            </div>
        </div>

        <div class="logout w-[100%] flex gap-2 justify-center items-center mt-5">
            <a href="/logout">
                <div class="logoutIcon flex gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px"
                        fill="#e8eaed">
                        <path
                            d="M200-120q-33 0-56.5-23.5T120-200v-560q0-33 23.5-56.5T200-840h280v80H200v560h280v80H200Zm440-160-55-58 102-102H360v-80h327L585-622l55-58 200 200-200 200Z" />
                    </svg>
                    <span class="labelLink3">Logout</span>
                </div>
            </a>
        </div>
    </aside>

    <div id="overlay"></div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sideBar = document.getElementById("sideBar");
            const overlay = document.getElementById("overlay");
            const userIcon = document.getElementById("userPic");
            const toggleBtn = document.getElementById("toggleBtn");
            const logo = document.querySelector(".logo");
            const labelLink0 = document.querySelector(".labelLink0");
            const labelLink = document.querySelector(".labelLink");
            const labelLink2 = document.querySelector(".labelLink2");
            const labelLink3 = document.querySelector(".labelLink3");

            toggleBtn.addEventListener("click", function (event) {
                // Prevent the event from bubbling up to the document
                event.stopPropagation();

                if (sideBar.style.width === "150px") {
                    sideBar.style.width = "50px";
                    overlay.style.display = "none"; // Hide overlay when sidebar is closed
                    logo.style.display = "none";
                    labelLink0.style.display = "none";
                    labelLink.style.display = "none";
                    labelLink2.style.display = "none";
                    labelLink3.style.display = "none";
                    userIcon.style.width = "24px";
                } else {
                    sideBar.style.width = "150px";
                    overlay.style.display = "block"; // Show overlay when sidebar is open
                    userIcon.style.width = "100px";

                    // Delay the display of the logo until after the sidebar is fully expanded
                    setTimeout(() => {
                        logo.style.display = "block";
                        labelLink0.style.display = "block";
                        labelLink.style.display = "block";
                        labelLink2.style.display = "block";
                        labelLink3.style.display = "block";
                    }, 300); // Adjust the delay to match the CSS transition duration
                }
            });

            // Close sidebar and overlay when overlay is clicked
            overlay.addEventListener("click", function () {
                sideBar.style.width = "50px";
                overlay.style.display = "none";
                logo.style.display = "none";
                labelLink0.style.display = "none";
                labelLink.style.display = "none";
                labelLink2.style.display = "none";
                labelLink3.style.display = "none";
            });

            // Close sidebar if click is outside of sidebar
            document.addEventListener("click", function (event) {
                if (!sideBar.contains(event.target) && !toggleBtn.contains(event.target)) {
                    sideBar.style.width = "50px";
                    overlay.style.display = "none";
                    logo.style.display = "none";
                    labelLink0.style.display = "none";
                    labelLink.style.display = "none";
                    labelLink2.style.display = "none";
                    labelLink3.style.display = "none";
                }
            });
        });
    </script>

</body>

</html>