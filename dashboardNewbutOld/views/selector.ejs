        <script>
            $(document).ready(function(){ 
                $("#menu-icon").click(function(){
                    $("#container").css({"z-index":"-1"});
                    // $("section").css({"blur":"500px"});
                    $("#img-logo").css({"opacity":"0.1"});
                })
                $("#close-icon").click(function(){
                    setTimeout(function() {
                        $("#container").css({"z-index":"1"});
