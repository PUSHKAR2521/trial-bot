                padding: 0;
                box-sizing: border-box;
            }

            @media only screen and (max-width: 527px) {
                section {
                    margin: 0 50px;
                    font-size: 1rem;
                }

                .parent>div>span {
                    width: 80vw;
                }
            }

            .lContainer {
                display: flex;
                /* justify-content: space-between; */
                gap: 50px;
                flex-direction: column;
                /* background: pink; */
                height: 80%;
            }

            .setting {
                display: flex;
                align-items: center;
                justify-content: space-between;
                font-size: 1.2rem;
            }

            .setting>a>img {
                width: 25px;
            }

