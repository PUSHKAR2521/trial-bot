    <header class="header">
        <div class="logo">
            B A C
        </div>

        <input type="checkbox" id="check">
            <label for="check"  class="icons">
                <i class='bx bx-menu' id="menu-icon"></i>
                <i class='bx bx-x' id="close-icon"></i>
            </label>

            <nav>
                <a href="/" class="transition duration-150 ease-out hover:ease-in hover:text-[#63E]">Home</a>
                <a href="/about" class="text-[#63E] transition duration-150 ease-out hover:ease-in hover:text-[#63E]">About</a>
                <a href="/features" class="transition duration-150 ease-out hover:ease-in hover:text-[#63E]">Features</a>
                <a href="/status" class="transition duration-150 ease-out hover:ease-in hover:text-[#63E]">Status</a>
